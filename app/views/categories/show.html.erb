<h1 class="text-center mt-4"><%= @category.name%></h1>
<% if user_signed_in? && current_user.admin? %>

<div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category),class: "btn btn-info" %>
</div>
<% end %>


<h3 class="text-center mt-4">Products</h3>
<div class="flickr_pagination">
    <%= will_paginate @products, :container => false %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 showallign style="width: 18rem;">
    <%= render 'shared/errors', obj: @product %>
      <% @products.each_slice(1) do |products_slice| %>
        <div class="card-deck" >
          <% products_slice.each do |product| %>
            <div class="card box-shadow">
              <% if product.image.attached? %>
                <%= image_tag product.image, class: "card-img-top size img-fluid mx-auto d-block" %>
              <% else %>
                <%= image_tag "default-image.jpg", class: "card-img-top img-fluid mx-auto d-block" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title text-center"><%= link_to product.product_title, product_path(product), class: "text-success" %></h5>
                <h5 class="card-text text-center">Description: <%= truncate(product.description, length: 100) %></h5>
                <p class="card-text text-center"><strong>SKU ID:</strong> <%= product.sku_id %></p>
                <p class="card-text text-center"><strong>CATEGORY:</strong>
                  <% product.categories.each do |category| %>
                    <%= category.name %>
                    <% unless category == product.categories.last %>
                      ,
                    <% end %>
                  <% end %>
                </p>
                <h5 class="card-title text-center">Price: <%= link_to product.price, product_path(product), class: "text-success" %> /-</h5>
                <% if user_signed_in? %>
                  <div class="text-center">
                    <%= link_to "View", product_path(product), class: "btn btn-primary " %>
                  </div>
                <% else %>
                  <div class="text-center">
                    <%= link_to "Login to view", root_path, class: "btn btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div><br><br>
      <% end %>
    </div>
  </div>
</div>

<div class="flickr_pagination">
    <%= will_paginate @products, :container => false %>
</div>

