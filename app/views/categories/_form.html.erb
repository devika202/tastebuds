<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
<div class="form-group row form-label">
  <%= f.label :name, "Category Name",class: "col-2 col-form-label text-light" %>
  <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" ,required: true %>
  </div>
</div><br>

<div class="form-group row justify-content-center form-label">
  <%= f.submit class: "btn btn-outline-dark btn-lg", style: "width: 200px;"%>
</div>
  <% end %>