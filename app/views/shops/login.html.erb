<div class="container">
  <h1 class="text-center mt-4">SHOP LOGIN</h1>
  <%= form_tag('/shops/login', method: 'post') do %>
    <div class="form-group">
      <%= label_tag(:email, 'Email') %>
      <%= email_field_tag(:email, '', class: 'form-control') %>
    </div>

    <div class="form-group">
      <%= label_tag(:password, 'Password') %>
      <%= password_field_tag(:password, '', class: 'form-control') %>
    </div><br>
    <div class="form-group row justify-content-center form-label">
      <%= submit_tag('Login', class: 'btn btn-dark btn-lg width') %>
    </div>
  <% end %>
</div>
