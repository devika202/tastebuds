<h1 class="text-center mt-4">All Sales Reports</h1><br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
        <%= search_form_for @search, url: admin_sales_reports_path, method: :get, class: 'd-flex me-3' do |f| %>
          <div class="input-group">
            <%= f.search_field :shop_name_or_category_name_cont, class: 'form-control me-2 text-dark', placeholder: 'Filter by shop or category name' %>
            <div class="input-group-append">
              <%= button_tag(class: 'btn btn-outline-dark', type: 'submit') do %>
                Search
              <% end %>
            </div>
          </div>
        <% end %><br>
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Shop Name</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total Price</th>
            <th scope="col">Date of Purchase</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @sales_reports.each do |sales_report| %>
            <tr>
              <td scope="row"><%= sales_report.shop.name %></td>
              <td scope="row"><%= sales_report.product_name %></td>
              <td scope="row"><%= sales_report.price %></td>
              <td scope="row"><%= sales_report.quantity %></td>
              <td scope="row"><%= sales_report.total_price %></td>
              <td scope="row"><%= sales_report.date_of_purchase %></td>
              <td scope="row"><%= sales_report.category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
