<div class="container"><br>
    <h1>Order Confirmation</h1><br>
    <p>Your order has been received.</p>
    <ul>
    <li>Order ID: <%= @order.id %></li>
    <li>Total: <%= number_to_currency(@order.price,unit: "₹") %></li>
    </ul><br>
    <div class="card position-relative">
    <div class="card-body">
        <h5 class="card-title"><strong>Order Details</strong></h5>
        <p class="card-text"><strong>Shipping Name: </strong><%= @order.shipping_name %></p>
        <p class="card-text"><strong>Shipping Address: </strong><%= @order.shipping_address %></p>
        <p class="card-text"><strong>Shipping City: </strong><%= @order.shipping_city %></p>
        <p class="card-text"><strong>Shipping State: </strong><%= @order.shipping_state %></p>
        <p class="card-text"><strong>Shipping Zipcode: </strong><%= @order.shipping_zipcode %></p>
        <p class="card-text"><strong>Payment Method: </strong><%= @order.payment_method %></p>
        <p class="card-text"><strong>Status:</strong> <%= @order.status %></p>

    </div>
    </div>
    <div class="card position-relative">
        <div class="card-body">
            <h5 class="card-title">Order Items</h5>
            <% @order.order_items.each do |item| %>
            <div class="card-text">
                <strong>Product Name: </strong><%= item.product.product_title %><br>
               <strong>Quantity: </strong><%= item.quantity %><br>
                <strong>Price per item: </strong><%= number_to_currency(item.product.price, unit: "₹") %><br>
               <strong> Total price: </strong><%= number_to_currency(item.total_price, unit: "₹") %><br>
            </div>
            <% end %>
        </div>
    </div>
</div>