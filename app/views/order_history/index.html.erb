<h1>Order History</h1>

<% if @orders.any? %>
  <% @orders.each do |order| %>
    <div>
      <h2>Order #<%= order.id %></h2>
      <p>Order Date: <%= order.created_at %></p>
      <p>Total: <%= number_to_currency(order.price, unit: "â‚¹") %></p>
      <p>Payment Method: <%= order.payment_method %></p>
        <%= link_to 'View Order', order_path(order) %>
    </div>
  <% end %>
<% else %>
  <p>No orders found.</p>
<% end %>
