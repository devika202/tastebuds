<!-- app/views/checkout/new.html.erb -->
<h1 class="text-center mt-4">CHECKOUT</h1><br>
<div class="container">
<%= form_with model: @order, url: create_order_path do |f| %>
    <%= f.label :shipping_name %>
    <%= f.text_field :shipping_name, class: "form-control" %>

    <%= f.label :shipping_address %>
    <%= f.text_field :shipping_address, class: "form-control" %>

    <%= f.label :shipping_city %>
    <%= f.text_field :shipping_city, class: "form-control" %>

    <%= f.label :shipping_state %>
    <%= f.text_field :shipping_state, class: "form-control" %>

    <%= f.label :shipping_zipcode %>
    <%= f.text_field :shipping_zipcode, class: "form-control" %>

    <%= f.label :payment_method %>
    <%= f.select :payment_method, ["Credit Card", "PayPal", "Cash on Delivery"], {}, class: "form-control" %>

    <%= f.submit "Place Order", class: "btn btn-success" %>
  <% end %>
</div>
