<div class="container">
  <div class="row justify-content-center">
    <div class="col-10"><br>
      <%= render 'shared/errors', obj: @product %>
      <%= form_with(model: @product, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row form-label">
          <%= f.label :product_title,class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :product_title, class: "form-control shadow rounded", placeholder: "Title of product" %>
          </div>
        </div>
        <div class="form-group row form-label">
          <%= f.label :description,class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control shadow rounded",placeholder: "Description of a product" %>
          </div>
        </div>
        <div class="form-group row form-label">
          <%= f.label :Weight,class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :weight, class: "form-control shadow rounded", placeholder: "Weight" %>
          </div>
        </div>
        <div class="form-group row form-label">
          <%= f.label :Quantity,class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :quantity, class: "form-control shadow rounded", placeholder: "Quantity" %>
          </div>
        </div>
        <div class="form-group row form-label">
          <%= f.label :price, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :price, class: "form-control shadow rounded", placeholder: "Price", step: "any" %>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :sku_id,class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :sku_id, class: "form-control shadow rounded", placeholder: "Enter SKU ID" %>
          </div>
        </div>
        <div class="form-group row form-label">
        <%= f.label :category_id, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)" },
            { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
        </div>
      </div>
      <div class="form-group row form-label">
        <%= f.label :image, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <% if @product.image.attached? %>
            <%= image_tag url_for(@product.image), class: "img-thumbnail" %>
          <% end %>
          <%= f.file_field :image, class: "form-control shadow rounded" %>
        </div>
      </div>
    
        <div class="form-group row justify-content-center form-label">
          <%= f.submit class: "btn btn-outline-dark btn-lg", style: "width: 200px;" %>
        </div>
        <div class="form-group row justify-content-center form-label">
          <%= link_to 'Cancel and return to products listing',products_path, class:"btn btn-outline-dark btn-lg", style: "width: 500px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
