<div class="container">
  <h1 class="text-center mt-4">PRODUCTS</h1><br>
  <div class="flickr_pagination">
    <%= will_paginate @products, :container => false %>
  </div>
  <div class="row new">
    <div class="col-md-0">
      <br><br>
      <div class="form-group">
      <%= search_form_for @search, url: products_path, method: :get, html: { class: 'form-group' } do |f| %>            
      <h3>Category</h3><br>
            <%=link_to('View All Products', products_path, class: "btn btn-light") %><br>
            <% @categories.each do |category| %>
              <%= check_box_tag 'q[categories_id_eq_any][]', category.id %>
              <%= category.name %><br>
            <% end %>
          <br><br>
            <h3>Price Range</h3><br>
              <%= f.number_field :price_gteq, class: 'form-control', placeholder: 'Min Price', style: 'width: 300px;' %><br>
              <%= f.number_field :price_lteq, class: 'form-control', placeholder: 'Max Price', style: 'width: 300px;' %><br>
              <%= f.submit "FILTER",  class: 'btn btn-primary' %>
          <% end %>
        </div>
    </div>
  </div>
  <%= render 'product'%>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @products, :container => false %>
  </div>
</div>

