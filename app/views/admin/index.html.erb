<h1>Sales Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Amount</th>
      <th>Product</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @sales_reports.where(shop_id: current_shop.id).each do |sales_report| %>
      <tr>
        <td><%= sales_report.date.strftime('%Y-%m-%d') %></td>
        <td><%= sales_report.time.strftime('%H:%M') %></td>
        <td><%= sales_report.amount %></td>
        <td><%= sales_report.product.name %></td>
        <td><%= sales_report.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>