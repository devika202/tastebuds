<h1 class="text-center mt-4">USER REGISTRATION</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div><%= render "devise/shared/error_messages", resource: resource %></div>
      <br><br>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :firstname %>
          </div>
          <div class="col-10">
            <%= f.text_field :firstname,class: "form-control shadow rounded", autofocus: true, autocomplete: "firstname",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :lastname %>
          </div>
          <div class="col-10">
            <%= f.text_field :lastname,class: "form-control shadow rounded", autofocus: true, autocomplete: "lastname",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
           <%= f.label :phone %>
          </div>
          <div class="col-10">
            <%= f.phone_field :phone,class: "form-control shadow rounded", autofocus: true, autocomplete: "phone",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :address %>
          </div>
          <div class="col-10">
            <%= f.text_field :address,class: "form-control shadow rounded", autofocus: true, autocomplete: "address",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :email %>
          </div>
          <div class="col-10">
            <%= f.email_field :email,class: "form-control shadow rounded", autofocus: true, autocomplete: "email",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :username %>
          </div>
          <div class="col-10">
            <%= f.text_field :username,class: "form-control shadow rounded", autofocus: true, autocomplete: "username",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :password %>
          </div>
          <div class="col-10">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password,class: "form-control shadow rounded", autocomplete: "new-password",required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <div class= "col-2 col-form-label text-dark">
            <%= f.label :confirm %>
          </div>
          <div class="col-10">
            <%= f.password_field :password_confirmation,class: "form-control shadow rounded", autocomplete: "new-password",required: true , placeholder: "Renter password for confirmation" %>
          </div>
        </div>

        <div class="form-group row justify-content-center form-label">
          <%= f.submit "Sign up",class: "btn btn-dark btn-lg width" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>