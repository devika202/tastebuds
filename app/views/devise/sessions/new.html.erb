<br><br><br><br>
<h1 class="text-center mt-4">LOG IN</h1>
<br><br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row form-label">
          <%= f.label :email,class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :password,class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", autocomplete: "current-password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group row justify-content-center form-label">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,class: "form-group row justify-content-center form-label" %>
          </div>
        <% end %>

        <div class="form-group row justify-content-center form-label">
          <%= f.submit "Log in",class: "btn btn-dark btn-lg width" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
