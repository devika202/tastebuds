<h1 class="text-center mt-4">Forgot your password?</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group row form-label">
          <%= f.label :email ,class: "col-2 col-form-label text-dark"%><br />
          <div class="col-10">
            <%= f.email_field :email,class: "form-control shadow rounded", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group row justify-content-center form-label">
          <%= f.submit "Send me reset password instructions",class: "btn btn-dark btn-lg width" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

